            #region №8
            {
                Random ran = new Random();
                Console.WriteLine("---№8---");
                double[,] Matrix = new double[7, 5];
                for (int i = 0; i < 7; i++)
                {
                    for (int j = 0; j < 5; j++)
                    {
                        Matrix[i, j] = ran.Next(100);
                        Console.Write("{0, -5}", Matrix[i, j]);
                    }
                    Console.WriteLine();
                }
                double[] Positive_mass = new double[7];
                for (int i = 0; i < 7; i++)
                {
                    int counter = 0;
                    for (int j = 0; j < 5; j++)
                    {
                        if (Matrix[i, j] >= 0)
                        {
                            counter++;
                        }
                    }
                    Positive_mass[i] = counter;
                }
                int index_sort = 1;
                while (index_sort < 7)
                {
                    if (index_sort == 0 || Positive_mass[index_sort - 1] < Positive_mass[index_sort])
                    {
                        index_sort++;
                    }
                    else
                    {
                        double x = Positive_mass[index_sort];
                        Positive_mass[index_sort] = Positive_mass[index_sort - 1];
                        Positive_mass[index_sort] = x;
                        for (int j = 0; j < 5; j++)
                        {
                            x = Matrix[index_sort - 1, j];
                            Matrix[index_sort - 1, j] = Matrix[index_sort, j];
                            Matrix[index_sort, j] = x;
                        }
                        index_sort--;
                    }
                }
                Console.WriteLine("Answer №8");
                for (int i = 0; i < 7; i++)
                {
                    for (int j = 0; j < 5; j++)
                    {
                        Console.Write("{0, -5}", Matrix[i, j]);
                    }
                    Console.WriteLine();
                }
            }
            #endregion
            #region №10
            {
                Random ran = new Random();
                Console.WriteLine("---№10---");
                double[,] Matrix = new double[7, 5];
                for (int i = 0; i < 7; i++)
                {
                    for (int j = 0; j < 5; j++)
                    {
                        Matrix[i, j] = ran.Next(100);
                        Console.Write("{0, -5}", Matrix[i, j]);
                    }
                    Console.WriteLine();
                }
                int sort_index = 0;
                for (int i = 0; i < 7; i++)
                {
                    if ((i + 1) % 2 != 0)
                    {
                        sort_index = 0;
                        while (sort_index < 5)
                        {
                            if (sort_index == 0 || Matrix[i, sort_index - 1] <= Matrix[i, sort_index]) sort_index++;
                            else
                            {
                                double x = Matrix[i, sort_index];
                                Matrix[i, sort_index] = Matrix[i, sort_index - 1];
                                Matrix[i, sort_index - 1] = x;
                                sort_index--;
                            }
                        }
                    }
                    else
                    {
                        sort_index = 0;
                        while (sort_index < 5)
                        {
                            if (sort_index == 0 || Matrix[i, sort_index - 1] >= Matrix[i, sort_index]) sort_index++;
                            else
                            {
                                double x = Matrix[i, sort_index];
                                Matrix[i, sort_index] = Matrix[i, sort_index - 1];
                                Matrix[i, sort_index - 1] = x;
                                sort_index--;
                            }
                        }
                    }
                }
                Console.WriteLine("Answer №10");
                for (int i = 0; i < 7; i++)
                {
                    for (int j = 0; j < 5; j++)
                        Console.Write("{0, -5}", Matrix[i, j]);
                    Console.WriteLine();
                }
            }
            #endregion
            #region
            {
                Random rnd = new Random();
                Console.WriteLine("---№11---");
                double[,] matrix = new double[7, 5];
                for (int i = 0; i < 7; i++)
                {
                    for (int j = 0; j < 5; j++)
                    {
                        matrix[i, j] = rnd.Next(-2, 2);
                        Console.Write("{0, -5}", matrix[i, j]);
                    }
                    Console.WriteLine();
                }
                int rows = matrix.GetLength(0); ;
                for (int i = 0; i < 7; i++)
                {
                    for (int j= 0; j < 5; j++)
                    {
                        if (matrix[i, j] == 0)
                        {
                            rows--;
                            break;
                        }
                    }
                }
                double[,] matrix_without_0 = new double[rows, 5];
                int trigger = 0, columns = 0;
                for (int i = 0; i < 7; i++)
                {
                    trigger = 0;
                    for (int j = 0; j < 5; j++)
                    {
                        if (matrix[i, j] == 0)
                        {
                            trigger = 1;
                            break;
                        }
                    }
                    if (trigger == 0)
                    {
                        for (int j = 0; j < 5; j++)
                        {
                             matrix_without_0[columns, j] = matrix[i, j];
                        }
                        columns++;
                    }
                }
                Console.WriteLine("Answer №11");
                for (int i = 0; i < rows; i++)
                {
                    for (int j = 0; j < 5; j++)
                    {
                        Console.Write("{0, -5}", matrix_without_0[i, j]);
                    }
                    Console.WriteLine();
                }
            }
            #endregion
            #endregion
        }
    }
