                {
                    int max_i = 0;
                    for (int j = 0; j < 7; j++)
                    {
                        A[i, j] = rnd.Next(100);
                        if (A[i, j] > max_i) max_i = j;
                    }
                    double x = A[i, 0];
                    A[i, 0] = A[i, max_i];
                    A[i, max_i] = i;
                }
                Console.WriteLine("Answer №9");
                for (int i = 0; i < 5; i++)
                {
                    for (int j = 0; j < 7; j++)
                    {
                        Console.Write(A[i, j] + " ");
                    }
                    Console.WriteLine();
                }
