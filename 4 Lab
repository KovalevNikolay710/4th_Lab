            #region №32
            {
                Random rnd = new Random();
                Console.WriteLine("---№31---");
                double[,] Mass = new double[5, 8];
                double[] Arr = new double[5] { 100, 100, 100, 100, 100 };
                for (int i = 0; i < 5; i++)
                {
                    for (int j = 0; j < 7; j++)
                    {
                        Mass[i, j] = rnd.Next(-100, 100);
                        Console.Write("{0, -5}", Mass[i, j]);
                    }
                    Console.WriteLine();
                }
                Console.WriteLine("Arr:");
                foreach (double x in Arr) Console.Write(x + " ");
                Console.WriteLine();
                double min = Mass[4, 0];
                int min_j = 0;
                for (int j = 1; j < 7; j++)
                {
                    if (Mass[4, j] < min)
                    {
                        min = Mass[4, j];
                        min_j = j;
                    }
                }
                for (int i = 0; i < 5; i++)
                {
                    for (int j = 6; j >= min_j; j--)
                    {
                        Mass[i, j + 1] = Mass[i, j];
                    }
                }
                for (int i = 0; i < 5; i++)
                {
                    Mass[i, min_j] = Arr[i];
                }
                Console.WriteLine();
                Console.WriteLine("Answer №31");
                for (int i = 0; i < 5; i++)
