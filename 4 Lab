                double[,] A = new double[4, 7];
                double[] Arr = new double[4];
                double max = 999999999;
                for (int i = 0; i < 4; i++)
                {
                    for (int j = 0; j < 7; j++)
                    {
                        A[i, j] = rnd.Next(1000);
                        if (A[i, j] < max)
                        {
                            max = A[i, j];
                        }
                    }
                    Arr[i] = max;
                }
                Console.WriteLine("Answer №6");
                foreach (double x in Arr) Console.Write(x + " ");
                Console.WriteLine();
            }
