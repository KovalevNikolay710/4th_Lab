                double[,] mass = new double[4, 4];
                double sum = 0;
                for (int i = 0; i < 4; i++)
                {
                    for (int j = 0; j < 4; j++)
                    {
                        mass[i, j] = rnd.Next(100);
                        if (i == j)
                        {
                            sum += mass[i, j];
                        }
                    }

                }
                Console.WriteLine("Answer №3");
                Console.WriteLine(sum);
            }
