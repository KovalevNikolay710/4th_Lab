                for (int i = 0; i < n; i++)
                {
                    for (int j = 0; j < m; j++)
                    {
                        masseffect[i, j] = rnd.Next(-100, 100);
                        Console.Write("{0,-5}", masseffect[i, j]);
                    }
                    Console.WriteLine();
                }
                for (int i = 0; i < n; i++)
                {
                    double min = masseffect[i, 0];
                    int min_j = 0;
                    for (int j = 0; j < m; j++)
                    {
                        if (masseffect[i, j] < min)
                        {
                            min = masseffect[i, j];
                            min_j = j;
                        }
                    }
                    for (int j = min_j - 1; j > 0; j--)
                    {
                        masseffect[i, j + 1] = masseffect[i, j];
                    }
                    masseffect[i, 0] = min;
                }
                Console.WriteLine("Answer for №17");
                for (int i = 0; i < n; i++)
                {
                    for (int j = 0; j < m; j++)
                    {
                        Console.Write("{0,-5}", masseffect[i, j]);
                    }
