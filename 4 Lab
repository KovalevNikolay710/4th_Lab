                    double[] mass = new double[7];
                    for (int j = 0; j < 7; j++)
                    {
                        terriblemess[i, j] = rnd.Next(50);
                        Console.Write("{0, -5}", terriblemess[i, j]);
                        mass[j] = terriblemess[i, j];
                    }
                    int counter = 0;
                    for (int j = 6; j >= 0; j--)
                    {
                        terriblemess[i, j] = mass[counter];
                        counter++;
                    }
                    Console.WriteLine();
                }
                Console.WriteLine("Answer №9");
