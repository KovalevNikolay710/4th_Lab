                Random rnd = new Random();
                Console.WriteLine("---№8---");
                double[,] mass = new double[6, 6];
                Console.WriteLine("mass");
                for (int i = 0; i < 6; i++)
                {
                    for (int j = 0; j < 6; j++)
                    {
                        mass[i, j] = rnd.Next(50);
                        Console.Write("{0, -5}", mass[i, j]);
                    }
                    Console.WriteLine();
                }
                double past_max = 0;
                int past_max_index = 0;
                for (int i = 0; i < 6; i++)
                {
                    double max = mass[i, 0];
                    int max_j = 0;
                    for (int j = 0; j < 6; j++)
                    {
                        if (mass[i, j] > max)
                        {
                            max = mass[i, j];
                            max_j = j;
                        }
                    }
                    if ((i + 1) % 2 != 0)
                    {
                        past_max = max;
                        past_max_index = max_j;
                    }
                    else
                    {
                        double x = mass[i, max_j];
                        mass[i, max_j] = past_max;
                        mass[i - 1, past_max_index] = x;
                    }
                }
                Console.WriteLine("Answer №8");
                for (int i = 0; i < 6; i++)
                {
                    for (int j = 0; j < 6; j++)
                        Console.Write("{0, -5}", mass[i, j]);
                    Console.WriteLine();
                }

            }
